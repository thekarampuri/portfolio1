---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  url?: string;
}

const { title, description, image, tags, url } = Astro.props;
---

<article class="border border-gray-300 overflow-hidden group transition-all duration-300 hover:border-ink hover:shadow-md">
  <a href={url || "#"} class="block">
    <div class="overflow-hidden">
      <img 
        src={image} 
        alt={title} 
        class="w-full h-52 object-cover grayscale transition-all duration-500 group-hover:grayscale-0 group-hover:scale-105"
        width="400"
        height="208"
      />
    </div>
    <div class="p-6">
      <h3 class="font-serif font-bold text-xl mb-2 group-hover:underline">{title}</h3>
      <p class="text-ink-light mb-4">{description}</p>
      <div class="flex flex-wrap gap-2">
        {tags.map(tag => (
          <span class="inline-block px-2 py-1 text-xs border border-gray-300 text-ink-light">{tag}</span>
        ))}
      </div>
    </div>
  </a>
</article>