---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Page Not Found">
  <div class="min-h-[70vh] flex flex-col items-center justify-center text-center px-4">
    <h1 class="font-gothic text-6xl md:text-8xl mb-6">404</h1>
    <div class="max-w-xl">
      <h2 class="font-serif text-2xl md:text-3xl mb-4">Page Not Found</h2>
      <p class="text-ink-light mb-8">The page you're looking for has been misplaced, archived, or never existed in the first place.</p>
      <a href="/" class="btn inline-block px-8 py-3">Return to Front Page</a>
    </div>
    
    <div class="mt-16 max-w-md">
      <div class="border-t border-b border-ink py-4 px-2 font-serif">
        <p class="italic text-center">"Not all those who wander are lost, but you definitely are."</p>
      </div>
    </div>
  </div>
</Layout>

<script>
  import { animate } from 'motion';
  
  // Animate 404 page elements
  window.addEventListener('DOMContentLoaded', () => {
    animate('h1', 
      { opacity: [0, 1], scale: [0.8, 1] },
      { duration: 0.8, easing: [0.25, 0.1, 0.25, 1] }
    );
    
    animate('h2, p, a, div.border-t', 
      { opacity: [0, 1], y: [20, 0] },
      { delay: 0.3, duration: 0.6, easing: [0.25, 0.1, 0.25, 1] }
    );
  });
</script>